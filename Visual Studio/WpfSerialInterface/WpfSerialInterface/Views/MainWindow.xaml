<Window x:Class="WpfSerialInterface.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSerialInterface.ViewModels"
        mc:Ignorable="d"
        Title="Serial Interface"
        SizeToContent="WidthAndHeight"
        MinWidth="600"
        MinHeight="450"
        Width="800"
        Height="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Background="{DynamicResource BackgroundBrush}">

    <!-- Ressourcen-Block bleibt leer, da alle Styles aus Theme-Dateien kommen -->
    <Window.Resources>
    </Window.Resources>

    <Grid>
        <!-- Spaltendefinitionen -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Zeilendefinitionen -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Row 0: Theme-Toggle-Button -->
            <RowDefinition Height="Auto"/>
            <!-- Row 1: Titel -->
            <RowDefinition Height="Auto"/>
            <!-- Row 2: Controls (ComboBox, Buttons) -->
            <RowDefinition Height="Auto"/>
            <!-- Row 3: Status -->
            <RowDefinition Height="Auto"/>
            <!-- Row 4: Received Data Label -->
            <RowDefinition Height="*"/>
            <!-- Row 5: Received Data (ScrollViewer) -->
            <RowDefinition Height="Auto"/>
            <!-- Row 6: Send Data Label -->
            <RowDefinition Height="Auto"/>
            <!-- Row 7: Send Data (TextBox + Button) -->
        </Grid.RowDefinitions>

        <!-- Theme-Toggle-Button (Row 0) -->
        <Button
            Grid.Row="0"
            Grid.Column="1"
            Content="🌓"
            Command="{Binding ToggleThemeCommand}"
            ToolTip="Toggle Dark/Light Mode"
            Style="{DynamicResource ModernButton}"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,5,10,5"
            Width="40"
            Height="30"/>

        <!-- Titel (Row 1) -->
        <Border Grid.Row="1" Grid.ColumnSpan="2" Background="Transparent" Margin="0,0,0,15">
            <Label
                Content="Serial Port Connection"
                FontWeight="Bold"
                FontSize="16"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="5"
                Foreground="{DynamicResource LabelBrush}"/>
        </Border>

        <!-- Linke Spalte mit Controls (Row 2) -->
        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Vertical" Margin="10,0,10,0">
            <Label Content="Available Ports:" Style="{DynamicResource SectionLabel}"/>
            <ComboBox
                ItemsSource="{Binding AvailablePorts}"
                SelectedItem="{Binding SelectedPort, Mode=TwoWay}"
                Style="{DynamicResource ModernComboBox}"/>
            <Button
                Content="Connect"
                Command="{Binding ConnectCommand}"
                Style="{DynamicResource ModernButton}"
                Height="35"/>
            <Button
                Content="Disconnect"
                Command="{Binding DisconnectCommand}"
                Style="{DynamicResource ModernButton}"
                Height="35"/>
        </StackPanel>

        <!-- Status (Row 3) -->
        <Border Grid.Row="3" Grid.Column="1" Margin="0,0,0,10">
            <Label
                Content="{Binding Status}"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Foreground="{DynamicResource LabelBrush}"
                FontSize="14"
                Margin="0,5,0,0"/>
        </Border>

        <!-- Received Data Label (Row 4) -->
        <Label
            Grid.Row="4"
            Grid.Column="1"
            Content="Received Data:"
            Style="{DynamicResource SectionLabel}"/>

        <!-- Received Data (Row 5) -->
        <Border Grid.Row="5" Grid.Column="1" Style="{DynamicResource ContentBorder}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <TextBlock
                    Text="{Binding ReceivedData}"
                    TextWrapping="Wrap"
                    Padding="8"
                    Foreground="{DynamicResource TextBrush}"/>
            </ScrollViewer>
        </Border>

        <!-- Send Data Label (Row 6) -->
        <Label
            Grid.Row="6"
            Grid.Column="1"
            Content="Send Data:"
            Style="{DynamicResource SectionLabel}"/>

        <!-- Send Data (Row 7) -->
        <Grid Grid.Row="6" Margin="120,27,0,0" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Content="Send"
                Command="{Binding SendCommand}"
                Style="{DynamicResource ModernButton}"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" Height="82"/>
            <Border Grid.Column="1" Style="{DynamicResource ContentBorder}">
                <TextBox
                    Text="{Binding SendData, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    AcceptsReturn="True"
                    Height="80"
                    VerticalScrollBarVisibility="Auto"
                    BorderThickness="0"
                    Padding="8,4"
                    Foreground="{DynamicResource TextBrush}" Margin="21,0,0,0"/>
            </Border>
        </Grid>
    </Grid>
</Window>