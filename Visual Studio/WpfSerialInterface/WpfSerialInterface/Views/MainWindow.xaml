<Window x:Class="WpfSerialInterface.Views.MainWindow
        "
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSerialInterface"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.41,0.466">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="127*"/>
            <ColumnDefinition Width="273*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblConnection" Content="Connection" HorizontalAlignment="Center" VerticalAlignment="Top" Height="26" Width="254" FontWeight="Bold"/>
        <ComboBox x:Name="cbbComSel" HorizontalAlignment="Left" Margin="0,26,0,0" VerticalAlignment="Top" Width="127"/>
        <Button x:Name="btnConnect" Content="Connect" HorizontalAlignment="Left" Margin="127,26,0,0" VerticalAlignment="Top" Width="127" Height="22"/>
        <Button x:Name="btnDesconnect" Content="Desconnect" HorizontalAlignment="Left" Margin="127,48,0,0" VerticalAlignment="Top" Width="127" Height="22"/>
        <Button x:Name="btnConnect_Copy" Content="Connect" HorizontalAlignment="Left" Margin="127,26,0,0" VerticalAlignment="Top" Width="127" Height="22"/>
        <Label x:Name="lblStatus" Content="Status" HorizontalAlignment="Center" VerticalAlignment="Top" Height="26" Width="546" FontWeight="Bold" Grid.Column="1"/>
        <TextBlock x:Name="txtBlock" Grid.Column="1" HorizontalAlignment="Center" Margin="0,26,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="302" Width="546"/>
        <TextBox x:Name="txtBox" Grid.Column="1" HorizontalAlignment="Center" Margin="0,333,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="546" Height="101"/>
        <ProgressBar HorizontalAlignment="Center" Height="20" Margin="0,140,0,0" VerticalAlignment="Top" Width="254"/>

    </Grid>
</Window>
