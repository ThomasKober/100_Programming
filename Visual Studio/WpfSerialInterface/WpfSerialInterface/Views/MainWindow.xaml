<Window x:Class="WpfSerialInterface.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSerialInterface.ViewModels"
        mc:Ignorable="d"
        Title="Serial Interface" Height="450" Width="800">

    <Grid>
        <!-- Spaltendefinitionen -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="127*"/>
            <ColumnDefinition Width="273*"/>
        </Grid.ColumnDefinitions>

        <!-- Verbindung (Label) -->
        <Label
            Content="Connection"
            FontWeight="Bold"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,0,0,10"/>

        <!-- COM-Port-Auswahl (ComboBox) -->
        <ComboBox
            ItemsSource="{Binding AvailablePorts}"
            SelectedItem="{Binding SelectedPort, Mode=TwoWay}"
            Margin="0,26,0,0"
            VerticalAlignment="Top"
            Grid.Column="0"
            DisplayMemberPath="Name" />
        <!-- Optional: Falls AvailablePorts Objekte mit 'Name'-Eigenschaft sind -->

        <!-- Connect-Button -->
        <Button
            Content="Connect"
            Command="{Binding ConnectCommand}"
            Margin="127,26,0,0"
            VerticalAlignment="Top"
            Width="127"
            Height="22"
            Grid.Column="0"/>

        <!-- Disconnect-Button -->
        <Button
            Content="Disconnect"
            Command="{Binding DisconnectCommand}"
            Margin="127,48,0,0"
            VerticalAlignment="Top"
            Width="127"
            Height="22"
            Grid.Column="0"/>

        <!-- Status (Label) -->
        <Label
            Content="{Binding Status}"
            FontWeight="Bold"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,0,0,10"/>

        <!-- Empfangene Daten (TextBlock) -->
        <TextBlock
            Text="{Binding ReceivedData}"
            Grid.Column="1"
            Margin="0,26,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Height="302"
            Width="546"/>

        <!-- Daten senden (TextBox) -->
        <TextBox
            Text="{Binding SendData, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Grid.Column="1"
            Margin="0,333,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="546"
            Height="101"/>

        <!-- Senden-Button -->
        <Button
            Content="Senden"
            Command="{Binding SendCommand}"
            Grid.Column="1"
            Margin="0,434,0,0"
            VerticalAlignment="Top"
            Width="546"
            Height="30"/>

        <!-- Fortschrittsbalken -->
        <ProgressBar
            HorizontalAlignment="Center"
            Height="20"
            VerticalAlignment="Center"
            Width="162"/>
    </Grid>
</Window>