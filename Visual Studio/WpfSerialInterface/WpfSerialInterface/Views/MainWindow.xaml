<Window x:Class="WpfSerialInterface.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSerialInterface.ViewModels"
        mc:Ignorable="d"
        Title="Serial Interface"
        SizeToContent="WidthAndHeight"
        MinWidth="400"
        MinHeight="300"
        Width="800"
        Height="450">
    <Grid>
        <!-- Spaltendefinitionen (proportional beibehalten) -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="127*"/>
            <ColumnDefinition Width="273*"/>
        </Grid.ColumnDefinitions>

        <!-- Verbindung (Label) - bleibt zentriert oben -->
        <Label
            Content="Connection"
            FontWeight="Bold"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,0,0,10"/>

        <!-- COM-Port-Auswahl (ComboBox) - behält Position, aber passt Breite an -->
        <ComboBox
            ItemsSource="{Binding AvailablePorts}"
            SelectedItem="{Binding SelectedPort, Mode=TwoWay}"
            Margin="0,26,127,0"
            VerticalAlignment="Top"
            Grid.Column="0"
            Foreground="Black"
            Background="White"
            MinWidth="120"/>

        <!-- Connect-Button - behält Position, aber passt Breite an -->
        <Button
            Content="Connect"
            Command="{Binding ConnectCommand}"
            Margin="127,26,0,0"
            VerticalAlignment="Top"
            Width="127"
            Height="22"
            Grid.Column="0"/>

        <!-- Disconnect-Button - behält Position -->
        <Button
            Content="Disconnect"
            Command="{Binding DisconnectCommand}"
            Margin="127,48,0,0"
            VerticalAlignment="Top"
            Width="127"
            Height="22"
            Grid.Column="0"/>

        <!-- Status (Label) - bleibt zentriert oben -->
        <Label
            Content="{Binding Status}"
            FontWeight="Bold"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,0,0,10"/>

        <!-- Empfangene Daten (TextBlock) - behält Position, aber wird scrollbar -->
        <ScrollViewer Grid.Column="1" Margin="0,26,0,0" VerticalAlignment="Top" Height="302" Width="546">
            <TextBlock
                Text="{Binding ReceivedData}"
                TextWrapping="Wrap"
                HorizontalAlignment="Stretch"/>
        </ScrollViewer>

        <!-- Daten senden (TextBox) - behält Position, aber passt Breite an -->
        <TextBox
            Text="{Binding SendData, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Grid.Column="1"
            Margin="54,333,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Height="101"
            Width="492"/>
        <!-- Senden-Button - behält Position, aber passt Breite an -->
        <Button
            Content="Senden"
            Command="{Binding SendCommand}"
            Margin="0,333,492,0"
            VerticalAlignment="Top"
            Height="101"
            Grid.Column="1"/>
    </Grid>
</Window>