<Window x:Class="WpfSerialInterface.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSerialInterface.ViewModels"
        mc:Ignorable="d"
        Title="Serial Interface"
        SizeToContent="WidthAndHeight"
        MinWidth="600"
        MinHeight="450"
        Width="800"
        Height="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Background="#FFF5F5F5">

    <!-- Ressourcen für konsistentes Styling -->
    <Window.Resources>
        <!-- Moderner Button-Stil mit angepasster Höhe -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF3F51B5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="80"/>
            <!-- Höhe an TextBox angepasst -->
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF3A4A9D"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF2A3A7D"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#FFB0B0B0"/>
                                <Setter Property="Foreground" Value="#FF606060"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Moderner ComboBox-Stil -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="MinWidth" Value="150"/>
        </Style>

        <!-- Moderner SectionLabel-Stil für Überschriften -->
        <Style x:Key="SectionLabel" TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#FF2A3A7D"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Moderner Border-Stil -->
        <Style x:Key="ModernBorder" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Moderner ContentBorder-Stil -->
        <Style x:Key="ContentBorder" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Spaltendefinitionen -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Zeilendefinitionen für bessere Struktur -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Titel -->
            <RowDefinition Height="Auto"/>
            <!-- Controls (ComboBox, Buttons) -->
            <RowDefinition Height="Auto"/>
            <!-- Received Data Label -->
            <RowDefinition Height="*"/>
            <!-- Received Data TextBlock -->
            <RowDefinition Height="Auto"/>
            <!-- Send Data Label -->
            <RowDefinition Height="Auto"/>
            <!-- Send Data Bereich -->
        </Grid.RowDefinitions>

        <!-- Verbindung (Label) - moderner Titel -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="Transparent" Margin="0,0,0,15">
            <Label
                Content="Serial Port Connection"
                FontWeight="Bold"
                FontSize="16"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="5"
                Foreground="#FF2A3A7D"/>
        </Border>

        <!-- Linke Spalte mit Controls -->
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" Margin="10,0,10,0">
            <!-- Available Ports Label -->
            <Label Content="Available Ports:" Style="{StaticResource SectionLabel}"/>

            <!-- COM-Port-Auswahl (ComboBox) -->
            <ComboBox
                ItemsSource="{Binding AvailablePorts}"
                SelectedItem="{Binding SelectedPort, Mode=TwoWay}"
                Style="{StaticResource ModernComboBox}"/>

            <!-- Connect-Button -->
            <Button
                Content="Connect"
                Command="{Binding ConnectCommand}"
                Style="{StaticResource ModernButton}"
                Height="35"/>
            <!-- Standardhöhe für diese Buttons -->

            <!-- Disconnect-Button -->
            <Button
                Content="Disconnect"
                Command="{Binding DisconnectCommand}"
                Style="{StaticResource ModernButton}"
                Height="35"/>
            <!-- Standardhöhe für diese Buttons -->
        </StackPanel>

        <!-- Status (Label) - rechts oben -->
        <Border Grid.Row="1" Grid.Column="1" Margin="0,0,0,10">
            <Label
                Content="{Binding Status}"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Foreground="#FF2A3A7D"
                FontSize="14"
                Margin="0,5,0,0"/>
        </Border>

        <!-- Received Data Label -->
        <Label
            Grid.Row="2"
            Grid.Column="1"
            Content="Received Data:"
            Style="{StaticResource SectionLabel}"
            Margin="0,0,0,0"/>

        <!-- Empfangene Daten (TextBlock) mit ScrollViewer -->
        <Border Grid.Row="3" Grid.Column="1" Style="{StaticResource ContentBorder}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <TextBlock
                    Text="{Binding ReceivedData}"
                    TextWrapping="Wrap"
                    Padding="8"
                    Foreground="#FF333333"/>
            </ScrollViewer>
        </Border>

        <!-- Send Data Label -->
        <Label
            Grid.Row="4"
            Grid.Column="1"
            Content="Send Data:"
            Style="{StaticResource SectionLabel}"
            Margin="0,0,0,0"/>

        <!-- Send Data Bereich mit horizontaler Anordnung -->
        <Grid Grid.Row="5" Grid.Column="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Send Button -->
                <ColumnDefinition Width="*"/>
                <!-- TextBox -->
            </Grid.ColumnDefinitions>

            <!-- Send Button - jetzt mit gleicher Höhe wie TextBox (80px) -->
            <Button
                Grid.Column="0"
                Content="Send"
                Command="{Binding SendCommand}"
                Style="{StaticResource ModernButton}"
                Margin="0,0,10,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"/>

            <!-- TextBox für Send Data - Höhe 80px -->
            <Border Grid.Column="1" Style="{StaticResource ContentBorder}">
                <TextBox
                    Text="{Binding SendData, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    AcceptsReturn="True"
                    Height="80"
                    VerticalScrollBarVisibility="Auto"
                    BorderThickness="0"
                    Padding="8,4"
                    Foreground="#FF333333"/>
            </Border>
        </Grid>
    </Grid>
</Window>