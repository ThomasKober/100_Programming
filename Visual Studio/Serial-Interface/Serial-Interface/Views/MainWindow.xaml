<Window x:Class="Serial_Interface.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Serial Interface" Height="350" Width="500">
    <StackPanel>
        <Button Content="Verbinden" Click="StartConnection_Click"/>
        <Button Content="Trennen" Click="StopConnection_Click"/>
        <TextBox x:Name="SendTextBox" Text="Hallo"/>
        <Button Content="Senden" Click="SendData_Click"/>
        <TextBlock Text="{Binding ReceivedText}"/>
    </StackPanel>
</Window>
