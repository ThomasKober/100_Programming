<Window x:Class="Interface_BLE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BLE Tool" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="BLE-Geräte scannen" Click="ScanDevices_Click" Margin="0,0,0,10"/>
        <ComboBox Grid.Row="1" x:Name="DeviceList" DisplayMemberPath="Name" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Service UUID:" Width="100"/>
            <TextBox x:Name="ServiceUuid" Width="200" Margin="0,0,10,0" Text="0000ffe0-0000-1000-8000-00805f9b34fb"/>
            <Label Content="Characteristic UUID:" Width="130"/>
            <TextBox x:Name="CharacteristicUuid" Width="200" Text="0000ffe1-0000-1000-8000-00805f9b34fb"/>
            <Button Content="Verbinden" Click="Connect_Click" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Output TextBox for displaying messages -->
        <ScrollViewer Grid.Row="3" Margin="0,0,0,10">
            <TextBox x:Name="OutputTextBox" AcceptsReturn="True" TextWrapping="Wrap" 
                     IsReadOnly="True" Background="LightGray"/>
        </ScrollViewer>

        <!-- Input TextBox for sending messages -->
        <TextBox Grid.Row="4" x:Name="InputTextBox" Margin="0,0,0,10" 
                 Text="Hallo BLE Gerät!" />

        <Button Grid.Row="5" Content="Senden" Click="Send_Click"/>
    </Grid>
</Window>