<Window x:Class="WpfControlPanelDesignTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfControlPanelDesignTest"
        mc:Ignorable="d"
        Title="Vintage Rotary Control Panel" Height="600" Width="900">
    <Window.Resources>
        <!-- Vintage Rotary Switch Style -->
        <Style x:Key="VintageRotaryStyle" TargetType="RadioButton">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid>
                            <!-- Base Housing -->
                            <Border x:Name="BaseHousing" 
                                  Width="100" Height="100"
                                  BorderBrush="#FF2A2A2A"
                                  BorderThickness="4"
                                  CornerRadius="50">
                                <Border.Background>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#FF4A4A4A" Offset="0"/>
                                        <GradientStop Color="#FF2A2A2A" Offset="0.7"/>
                                        <GradientStop Color="#FF1A1A1A" Offset="1"/>
                                    </RadialGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="12" ShadowDepth="6" Opacity="0.8"/>
                                </Border.Effect>

                                <!-- Inner ring -->
                                <Border CornerRadius="46" Margin="4">
                                    <Border.Background>
                                        <RadialGradientBrush>
                                            <GradientStop Color="#FF3A3A3A" Offset="0"/>
                                            <GradientStop Color="#FF1A1A1A" Offset="0.5"/>
                                            <GradientStop Color="#FF0A0A0A" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Border.Background>

                                    <!-- Mounting bolts -->
                                    <Grid>
                                        <Ellipse Width="8" Height="8" 
                                               Fill="#FF666666"
                                               Stroke="#FF333333"
                                               StrokeThickness="1"
                                               HorizontalAlignment="Left" 
                                               VerticalAlignment="Top"
                                               Margin="12,12,0,0">
                                            <Ellipse.Effect>
                                                <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="0.7"/>
                                            </Ellipse.Effect>
                                        </Ellipse>
                                        <Ellipse Width="8" Height="8" 
                                               Fill="#FF666666"
                                               Stroke="#FF333333"
                                               StrokeThickness="1"
                                               HorizontalAlignment="Right" 
                                               VerticalAlignment="Top"
                                               Margin="0,12,12,0">
                                            <Ellipse.Effect>
                                                <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="0.7"/>
                                            </Ellipse.Effect>
                                        </Ellipse>
                                        <Ellipse Width="8" Height="8" 
                                               Fill="#FF666666"
                                               Stroke="#FF333333"
                                               StrokeThickness="1"
                                               HorizontalAlignment="Left" 
                                               VerticalAlignment="Bottom"
                                               Margin="12,0,0,12">
                                            <Ellipse.Effect>
                                                <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="0.7"/>
                                            </Ellipse.Effect>
                                        </Ellipse>
                                        <Ellipse Width="8" Height="8" 
                                               Fill="#FF666666"
                                               Stroke="#FF333333"
                                               StrokeThickness="1"
                                               HorizontalAlignment="Right" 
                                               VerticalAlignment="Bottom"
                                               Margin="0,0,12,12">
                                            <Ellipse.Effect>
                                                <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="0.7"/>
                                            </Ellipse.Effect>
                                        </Ellipse>
                                    </Grid>
                                </Border>
                            </Border>

                            <!-- Rotary Knob -->
                            <Border x:Name="RotaryKnob" 
                                  Width="70" Height="70"
                                  CornerRadius="35"
                                  BorderBrush="#FF666666"
                                  BorderThickness="2">
                                <Border.Background>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                                        <GradientStop Color="#FFDDDDDD" Offset="0.3"/>
                                        <GradientStop Color="#FFAAAAAA" Offset="0.7"/>
                                        <GradientStop Color="#FFCCCCCC" Offset="1"/>
                                    </RadialGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="6" ShadowDepth="3" Opacity="0.6"/>
                                </Border.Effect>

                                <!-- Knob details -->
                                <Grid>
                                    <!-- Center dot -->
                                    <Ellipse Width="6" Height="6" 
                                           Fill="#FF666666"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>

                                    <!-- Grip texture -->
                                    <Grid>
                                        <Rectangle Width="40" Height="1" Fill="#FF888888" VerticalAlignment="Top" Margin="0,10,0,0"/>
                                        <Rectangle Width="45" Height="1" Fill="#FF888888" VerticalAlignment="Top" Margin="0,20,0,0"/>
                                        <Rectangle Width="40" Height="1" Fill="#FF888888" VerticalAlignment="Top" Margin="0,30,0,0"/>
                                        <Rectangle Width="45" Height="1" Fill="#FF888888" VerticalAlignment="Bottom" Margin="0,0,0,30"/>
                                        <Rectangle Width="40" Height="1" Fill="#FF888888" VerticalAlignment="Bottom" Margin="0,0,0,20"/>
                                        <Rectangle Width="45" Height="1" Fill="#FF888888" VerticalAlignment="Bottom" Margin="0,0,0,10"/>
                                    </Grid>
                                </Grid>
                            </Border>

                            <!-- Position Indicator Arrow -->
                            <Polygon x:Name="PositionArrow"
                                   Fill="#FFFF4400"
                                   Stroke="#FF333333"
                                   StrokeThickness="1"
                                   Points="50,15 45,25 55,25"
                                   RenderTransformOrigin="0.5,0.5">
                                <Polygon.RenderTransform>
                                    <RotateTransform x:Name="ArrowRotation" Angle="0"/>
                                </Polygon.RenderTransform>
                                <Polygon.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="0.5"/>
                                </Polygon.Effect>
                            </Polygon>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RotaryKnob" Property="Background">
                                    <Setter.Value>
                                        <RadialGradientBrush>
                                            <GradientStop Color="#FFFFFFFF" Offset="0"/>
                                            <GradientStop Color="#FFEEEEEE" Offset="0.3"/>
                                            <GradientStop Color="#FFBBBBBB" Offset="0.7"/>
                                            <GradientStop Color="#FFDDDDDD" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Position Label Style -->
        <Style x:Key="PositionLabelStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Arial Black"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FFDDDDDD"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Vintage Label Style -->
        <Style x:Key="VintageLabelStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FFDDDDDD"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <!-- Vintage Industrial Background -->
    <Border>
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF3A3A3A" Offset="0"/>
                <GradientStop Color="#FF2A2A2A" Offset="0.3"/>
                <GradientStop Color="#FF1A1A1A" Offset="0.7"/>
                <GradientStop Color="#FF0A0A0A" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Vintage Header -->
            <Border Grid.Row="0" 
                    Background="#FF444444" 
                    BorderBrush="#FF666666" 
                    BorderThickness="2" 
                    Margin="20,20,20,0"
                    Padding="20,10">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="6" ShadowDepth="3" Opacity="0.8"/>
                </Border.Effect>
                <TextBlock Text="VINTAGE ROTARY CONTROL PANEL - EST. 1952" 
                         FontFamily="Times New Roman" 
                         FontSize="20" 
                         FontWeight="Bold"
                         Foreground="#FFEEEEEE"
                         HorizontalAlignment="Center"/>
            </Border>

            <!-- Main Control Panel -->
            <Border Grid.Row="1" 
                    Background="#FF2A2A2A" 
                    BorderBrush="#FF444444" 
                    BorderThickness="3" 
                    CornerRadius="8"
                    Margin="40,30,40,0"
                    Padding="40">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5" Opacity="0.8"/>
                </Border.Effect>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Position Labels -->
                    <Canvas Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <!-- OFF position -->
                        <Border Canvas.Left="75" Canvas.Top="10" 
                              Background="#FF1A1A1A" 
                              BorderBrush="#FF444444" 
                              BorderThickness="1" 
                              CornerRadius="3"
                              Padding="8,3">
                            <TextBlock Text="OFF" Style="{StaticResource PositionLabelStyle}"/>
                        </Border>

                        <!-- LOW position -->
                        <Border Canvas.Left="140" Canvas.Top="40" 
                              Background="#FF1A1A1A" 
                              BorderBrush="#FF444444" 
                              BorderThickness="1" 
                              CornerRadius="3"
                              Padding="8,3">
                            <TextBlock Text="LOW" Style="{StaticResource PositionLabelStyle}"/>
                        </Border>

                        <!-- MED position -->
                        <Border Canvas.Left="140" Canvas.Top="120" 
                              Background="#FF1A1A1A" 
                              BorderBrush="#FF444444" 
                              BorderThickness="1" 
                              CornerRadius="3"
                              Padding="8,3">
                            <TextBlock Text="MED" Style="{StaticResource PositionLabelStyle}"/>
                        </Border>

                        <!-- HIGH position -->
                        <Border Canvas.Left="75" Canvas.Top="150" 
                              Background="#FF1A1A1A" 
                              BorderBrush="#FF444444" 
                              BorderThickness="1" 
                              CornerRadius="3"
                              Padding="8,3">
                            <TextBlock Text="HIGH" Style="{StaticResource PositionLabelStyle}"/>
                        </Border>

                        <!-- MAX position -->
                        <Border Canvas.Left="10" Canvas.Top="120" 
                              Background="#FF1A1A1A" 
                              BorderBrush="#FF444444" 
                              BorderThickness="1" 
                              CornerRadius="3"
                              Padding="8,3">
                            <TextBlock Text="MAX" Style="{StaticResource PositionLabelStyle}"/>
                        </Border>

                        <!-- FULL position -->
                        <Border Canvas.Left="10" Canvas.Top="40" 
                              Background="#FF1A1A1A" 
                              BorderBrush="#FF444444" 
                              BorderThickness="1" 
                              CornerRadius="3"
                              Padding="8,3">
                            <TextBlock Text="FULL" Style="{StaticResource PositionLabelStyle}"/>
                        </Border>
                    </Canvas>

                    <!-- Rotary Switch -->
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="MOTOR SPEED CONTROL" 
                                 Style="{StaticResource VintageLabelStyle}" 
                                 Margin="0,0,0,20"/>

                        <!-- Clickable Rotary Switch -->
                        <Grid x:Name="RotarySwitch" 
                              Width="120" Height="120"
                              Background="Transparent"
                              Cursor="Hand">

                            <!-- Base Housing -->
                            <Border Width="100" Height="100"
                                  BorderBrush="#FF2A2A2A"
                                  BorderThickness="4"
                                  CornerRadius="50">
                                <Border.Background>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#FF4A4A4A" Offset="0"/>
                                        <GradientStop Color="#FF2A2A2A" Offset="0.7"/>
                                        <GradientStop Color="#FF1A1A1A" Offset="1"/>
                                    </RadialGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="12" ShadowDepth="6" Opacity="0.8"/>
                                </Border.Effect>

                                <!-- Inner ring -->
                                <Border CornerRadius="46" Margin="4">
                                    <Border.Background>
                                        <RadialGradientBrush>
                                            <GradientStop Color="#FF3A3A3A" Offset="0"/>
                                            <GradientStop Color="#FF1A1A1A" Offset="0.5"/>
                                            <GradientStop Color="#FF0A0A0A" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Border.Background>

                                    <!-- Mounting bolts -->
                                    <Grid>
                                        <Ellipse Width="8" Height="8" 
                                               Fill="#FF666666"
                                               Stroke="#FF333333"
                                               StrokeThickness="1"
                                               HorizontalAlignment="Left" 
                                               VerticalAlignment="Top"
                                               Margin="12,12,0,0">
                                            <Ellipse.Effect>
                                                <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="0.7"/>
                                            </Ellipse.Effect>
                                        </Ellipse>
                                        <Ellipse Width="8" Height="8" 
                                               Fill="#FF666666"
                                               Stroke="#FF333333"
                                               StrokeThickness="1"
                                               HorizontalAlignment="Right" 
                                               VerticalAlignment="Top"
                                               Margin="0,12,12,0">
                                            <Ellipse.Effect>
                                                <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="0.7"/>
                                            </Ellipse.Effect>
                                        </Ellipse>
                                        <Ellipse Width="8" Height="8" 
                                               Fill="#FF666666"
                                               Stroke="#FF333333"
                                               StrokeThickness="1"
                                               HorizontalAlignment="Left" 
                                               VerticalAlignment="Bottom"
                                               Margin="12,0,0,12">
                                            <Ellipse.Effect>
                                                <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="0.7"/>
                                            </Ellipse.Effect>
                                        </Ellipse>
                                        <Ellipse Width="8" Height="8" 
                                               Fill="#FF666666"
                                               Stroke="#FF333333"
                                               StrokeThickness="1"
                                               HorizontalAlignment="Right" 
                                               VerticalAlignment="Bottom"
                                               Margin="0,0,12,12">
                                            <Ellipse.Effect>
                                                <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="0.7"/>
                                            </Ellipse.Effect>
                                        </Ellipse>
                                    </Grid>
                                </Border>
                            </Border>

                            <!-- Rotary Knob -->
                            <Border x:Name="RotaryKnob" 
                                  Width="70" Height="70"
                                  CornerRadius="35"
                                  BorderBrush="#FF666666"
                                  BorderThickness="2">
                                <Border.RenderTransform>
                                    <RotateTransform x:Name="KnobRotation" Angle="0" CenterX="35" CenterY="35"/>
                                </Border.RenderTransform>
                                <Border.Background>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                                        <GradientStop Color="#FFDDDDDD" Offset="0.3"/>
                                        <GradientStop Color="#FFAAAAAA" Offset="0.7"/>
                                        <GradientStop Color="#FFCCCCCC" Offset="1"/>
                                    </RadialGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="6" ShadowDepth="3" Opacity="0.6"/>
                                </Border.Effect>

                                <!-- Knob details -->
                                <Grid>
                                    <!-- Center dot -->
                                    <Ellipse Width="6" Height="6" 
                                           Fill="#FF666666"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>

                                    <!-- Grip texture -->
                                    <Grid>
                                        <Rectangle Width="40" Height="1" Fill="#FF888888" VerticalAlignment="Top" Margin="0,10,0,0"/>
                                        <Rectangle Width="45" Height="1" Fill="#FF888888" VerticalAlignment="Top" Margin="0,20,0,0"/>
                                        <Rectangle Width="40" Height="1" Fill="#FF888888" VerticalAlignment="Top" Margin="0,30,0,0"/>
                                        <Rectangle Width="45" Height="1" Fill="#FF888888" VerticalAlignment="Bottom" Margin="0,0,0,30"/>
                                        <Rectangle Width="40" Height="1" Fill="#FF888888" VerticalAlignment="Bottom" Margin="0,0,0,20"/>
                                        <Rectangle Width="45" Height="1" Fill="#FF888888" VerticalAlignment="Bottom" Margin="0,0,0,10"/>
                                    </Grid>
                                </Grid>
                            </Border>

                            <!-- Position Indicator Arrow -->
                            <Polygon Fill="#FFFF4400"
                                   Stroke="#FF333333"
                                   StrokeThickness="1"
                                   Points="60,15 55,25 65,25"
                                   RenderTransformOrigin="0.5,0.5">
                                <Polygon.RenderTransform>
                                    <RotateTransform x:Name="ArrowRotation" Angle="0" CenterX="60" CenterY="60"/>
                                </Polygon.RenderTransform>
                                <Polygon.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="0.5"/>
                                </Polygon.Effect>
                            </Polygon>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Status Panel -->
            <Border Grid.Row="2" 
                    Background="#FF1A1A1A" 
                    BorderBrush="#FF333333" 
                    BorderThickness="2" 
                    CornerRadius="4"
                    Margin="40,20,40,20"
                    Padding="15,8">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="CURRENT POSITION:" 
                             FontFamily="Arial Black" 
                             FontSize="12" 
                             FontWeight="Bold"
                             Foreground="#FFAAAAAA"
                             VerticalAlignment="Center"/>
                    <TextBlock x:Name="CurrentPosition" 
                             Text="OFF" 
                             FontFamily="Arial Black" 
                             FontSize="12" 
                             FontWeight="Bold"
                             Foreground="#FFFF6600"
                             VerticalAlignment="Center"
                             Margin="10,0,0,0"/>

                    <Rectangle Width="2" Height="16" 
                             Fill="#FF444444" 
                             Margin="20,0"/>

                    <Ellipse x:Name="StatusIndicator"
                           Width="12" Height="12" 
                           Fill="#FFFF6600"
                           Margin="10,0,0,0">
                        <Ellipse.Effect>
                            <DropShadowEffect Color="#FFFF6600" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                        </Ellipse.Effect>
                    </Ellipse>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
    