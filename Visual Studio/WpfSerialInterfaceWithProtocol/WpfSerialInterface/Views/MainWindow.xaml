<Window x:Class="WpfSerialInterfaceWithProtocol.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSerialInterfaceWithProtocol.ViewModels"
        mc:Ignorable="d"
        Title="Serial Interface"
        SizeToContent="WidthAndHeight"
        MinWidth="600"
        MinHeight="450"
        Width="800"
        Height="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Background="{DynamicResource BackgroundBrush}">
    <Grid>
        <!-- Spaltendefinitionen -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Feste Breite für linke Spalte -->
            <ColumnDefinition Width="*"/>
            <!-- Flexible Breite für rechte Spalte -->
        </Grid.ColumnDefinitions>
        <!-- Zeilendefinitionen -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Row 0: Theme-Toggle-Button -->
            <RowDefinition Height="Auto"/>
            <!-- Row 1: Titel -->
            <RowDefinition Height="Auto"/>
            <!-- Row 2: Controls (ComboBox, Buttons) + Status -->
            <RowDefinition Height="Auto"/>
            <!-- Row 3: Received Data Label -->
            <RowDefinition Height="*"/>
            <!-- Row 4: Received Data (ScrollViewer) -->
            <RowDefinition Height="Auto"/>
            <!-- Row 5: Send Data Label -->
            <RowDefinition Height="Auto"/>
            <!-- Row 6: Send Data (TextBox + Button) -->
        </Grid.RowDefinitions>

        <!-- Theme-Toggle-Button (Row 0) -->
        <Button
            Grid.Row="0"
            Grid.Column="1"
            Content="🌓"
            Command="{Binding ToggleThemeCommand}"
            ToolTip="Toggle Dark/Light Mode"
            Style="{DynamicResource ModernButton}"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,5,10,5"
            Width="40"
            Height="30"/>

        <!-- Titel (Row 1) -->
        <Border
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Background="Transparent"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="0,0,0,1"
            Margin="0,0,0,15"
            Padding="0,0,0,10">
            <Label
                Content="Serial Port Connection"
                FontWeight="Bold"
                FontSize="16"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="5"
                Foreground="{DynamicResource LabelBrush}"/>
        </Border>

        <!-- Linke Spalte mit Controls (Row 2) -->
        <Border
            Grid.Row="2"
            Grid.Column="0"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Margin="10,0,5,0"
            Padding="8">
            <StackPanel Orientation="Vertical">
                <Label Content="Available Ports:" Style="{DynamicResource SectionLabel}"/>
                <ComboBox
                    ItemsSource="{Binding AvailablePorts}"
                    SelectedItem="{Binding SelectedPort, Mode=TwoWay}"
                    Style="{DynamicResource ModernComboBox}"/>
                <Button
                    Content="Connect"
                    Command="{Binding ConnectCommand}"
                    Style="{DynamicResource ModernButton}"
                    Height="35"
                    Margin="0,5,0,5"/>
                <Button
                    Content="Disconnect"
                    Command="{Binding DisconnectCommand}"
                    Style="{DynamicResource ModernButton}"
                    Height="35"
                    Margin="0,5,0,5"/>
            </StackPanel>
        </Border>

        <!-- Status (Row 2, rechts) - Optimierte Breite -->
        <Border
            Grid.Row="2"
            Grid.Column="1"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Margin="5,0,10,10"
            Padding="15,8"
            HorizontalAlignment="Stretch">
            <Label
                Content="{Binding Status}"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="{DynamicResource LabelBrush}"
                FontSize="14"/>
        </Border>

        <!-- Received Data Label (Row 3) -->
        <Label
            Grid.Row="3"
            Grid.Column="1"
            Content="Received Data:"
            Style="{DynamicResource SectionLabel}"
            Foreground="{DynamicResource LabelBrush}"
            Margin="10,5,10,0"/>

        <!-- Received Data (Row 4) -->
        <Border
            Grid.Row="4"
            Grid.Column="1"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Margin="10,0,10,10"
            Padding="0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <TextBlock
                    Text="{Binding ReceivedData}"
                    TextWrapping="Wrap"
                    Padding="8"
                    Foreground="{DynamicResource TextBrush}"/>
            </ScrollViewer>
        </Border>

        <!-- Send Data Label (Row 5) -->
        <Label
            Grid.Row="5"
            Grid.Column="1"
            Content="Send Data:"
            Style="{DynamicResource SectionLabel}"
            Foreground="{DynamicResource LabelBrush}"
            Margin="10,10,10,5"/>

        <!-- Send Data (Row 6) - Ausrichtung wie oben -->
        <Grid Grid.Row="6" Grid.ColumnSpan="2" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <!-- Gleiche Breite wie linke Spalte -->
                <ColumnDefinition Width="*"/>
                <!-- Gleiche Breite wie Status -->
            </Grid.ColumnDefinitions>

            <!-- Send-Button - gleiche Breite wie Disconnect Button -->
            <Border
                Grid.Column="0"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Margin="10,0,5,0"
                Padding="8">
                <Button
                    Content="Send"
                    Command="{Binding SendCommand}"
                    Style="{DynamicResource ModernButton}"
                    Height="35"
                    Margin="0,5,0,5"/>
            </Border>

            <!-- TextBox - gleiche Breite wie Status -->
            <Border
                Grid.Column="1"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Margin="5,0,10,0"
                Padding="8">
                <TextBox
                    Text="{Binding SendData, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Style="{DynamicResource ModernTextBox}"
                    Height="35"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    Padding="8">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SendCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>
            </Border>
        </Grid>
    </Grid>
</Window>